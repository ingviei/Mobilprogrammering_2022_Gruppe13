    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="no.gruppe13.hiof.taskmanager.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_todayFragment"
            app:destination="@id/todayFragment" />
        <action
            android:id="@+id/action_mainFragment_to_thisWeekFragment"
            app:destination="@id/thisWeekFragment" />
        <action
            android:id="@+id/action_mainFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
    </fragment>

    <fragment
        android:id="@+id/todayFragment"
        android:name="no.gruppe13.hiof.taskmanager.TodayFragment"
        android:label="fragment_today"
        tools:layout="@layout/fragment_today" >
        <action
            android:id="@+id/action_todayFragment_to_mainFragment"
            app:destination="@id/mainFragment"
           />
        <action
            android:id="@+id/action_todayFragment_to_createTaskActivity"
            app:destination="@id/createTaskActivity" />

    </fragment>

    <fragment
        android:id="@+id/thisWeekFragment"
        android:name="no.gruppe13.hiof.taskmanager.ThisWeekFragment"
        android:label="fragment_this_week"
        tools:layout="@layout/fragment_this_week" >
        <action
            android:id="@+id/action_thisWeekFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/categoryFragment"
        android:name="no.gruppe13.hiof.taskmanager.CategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category" >
        <action
            android:id="@+id/action_categoryFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <activity
        android:id="@+id/createTaskActivity"
        android:name="no.gruppe13.hiof.taskmanager.CreateTaskActivity"
        android:label="activity_create_task"
        tools:layout="@layout/activity_create_task" />

